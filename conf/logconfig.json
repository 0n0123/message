{
    "appenders": {
        "out": {
            "type": "stdout"
        },
        "app": {
            "type": "dateFile",
            "filename": "./logs/server.log",
            "pattern": ".yyyy-MM-dd",
            "numBackups": 60
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "out",
                "app"
            ],
            "level": "info"
        }
    }
}